<Window x:Class="SourceFlow.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SourceFlow.UI"
        xmlns:views="clr-namespace:SourceFlow.UI.Views"
        xmlns:converters="clr-namespace:SourceFlow.UI.Converters"
        mc:Ignorable="d"
        Title="SourceFlow - ソース管理・リリース管理システム" 
        Height="830" Width="1000"
        MinHeight="500" MinWidth="800"
        >
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- メニューバー -->
        <Menu Grid.Row="0">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="更新(_R)" Command="{Binding RefreshCommand}" InputGestureText="F5"/>
                <Separator/>
                <MenuItem Header="終了(_X)" Command="{Binding ExitCommand}" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="表示(_V)">
                <MenuItem Header="ダッシュボード" InputGestureText="Ctrl+1" Click="NavigateToTab" Tag="0"/>
                <MenuItem Header="ソース取得" InputGestureText="Ctrl+2" Click="NavigateToTab" Tag="1"/>
                <MenuItem Header="ファイル管理" InputGestureText="Ctrl+3" Click="NavigateToTab" Tag="2"/>
                <MenuItem Header="比較・リリース" InputGestureText="Ctrl+4" Click="NavigateToTab" Tag="3"/>
                <MenuItem Header="スケジュール管理" InputGestureText="Ctrl+5" Click="NavigateToTab" Tag="4"/>
                <MenuItem Header="ファイル差分" InputGestureText="Ctrl+D" Click="NavigateToTab" Tag="6"/>
                <MenuItem Header="設定" InputGestureText="Ctrl+6" Click="NavigateToTab" Tag="5"/>
            </MenuItem>
            <MenuItem Header="ヘルプ(_H)">
                <MenuItem Header="バージョン情報(_A)"/>
            </MenuItem>
        </Menu>

        <!-- メインコンテンツ -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}" Margin="5">
            <TabItem Header="ダッシュボード">
                <views:DashboardView DataContext="{Binding DashboardViewModel}"/>
            </TabItem>
            
            <TabItem Header="ソース取得">
                <views:SourceSyncView DataContext="{Binding SourceSyncViewModel}"/>
            </TabItem>
            
            <TabItem Header="ファイル管理">
                <views:FileManagerView DataContext="{Binding FileManagerViewModel}"/>
            </TabItem>
            
            <TabItem Header="比較・リリース">
                <views:ReleaseManagerView DataContext="{Binding ReleaseManagerViewModel}"/>
            </TabItem>
            
            <TabItem Header="スケジュール管理">
                <views:ScheduleManagerView DataContext="{Binding ScheduleManagerViewModel}"/>
            </TabItem>
            
            <TabItem Header="設定">
                <views:SettingsView DataContext="{Binding SettingsViewModel}"/>
            </TabItem>
            
            <TabItem Header="ファイル差分">
                <views:FileDiffView DataContext="{Binding FileDiffViewModel}"/>
            </TabItem>
        </TabControl>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="キーボードショートカット: Ctrl+1-5 (タブ切替), F5 (更新)" 
                               Margin="0,0,10,0" Foreground="Gray" FontSize="10"/>
                    <TextBlock Text="Ready" x:Name="TimeDisplay"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
