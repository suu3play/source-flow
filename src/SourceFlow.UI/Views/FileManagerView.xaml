<UserControl x:Class="SourceFlow.UI.Views.FileManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:SourceFlow.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="ファイル管理" FontSize="24" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="ファイルとディレクトリを参照・管理します" FontSize="14" Foreground="Gray"/>
        </StackPanel>

        <!-- ナビゲーションバー -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Content="↑" Command="{Binding NavigateUpCommand}" 
                    Width="30" Height="25" Margin="0,0,5,0" ToolTip="上位ディレクトリ"/>
                    
            <TextBox Grid.Column="1" Text="{Binding CurrentPath, Mode=TwoWay}" 
                     IsReadOnly="True" VerticalContentAlignment="Center"
                     Background="LightGray" Margin="0,0,5,0"/>
                     
            <Button Grid.Column="2" Content="更新" Command="{Binding RefreshCommand}" 
                    Width="50" Height="25" Margin="0,0,5,0"/>
                    
            <ProgressBar Grid.Column="3" Width="100" Height="20" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsIndeterminate="True"/>
        </Grid>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="2" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側: ディレクトリツリー -->
            <GroupBox Grid.Column="0" Header="ディレクトリ">
                <TreeView x:Name="DirectoryTreeView" 
                         ItemsSource="{Binding DirectoryTree}"
                         SelectedItemChanged="DirectoryTreeView_SelectedItemChanged"
                         VirtualizingStackPanel.IsVirtualizing="True"
                         VirtualizingStackPanel.VirtualizationMode="Recycling">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16" Margin="0,0,5,0">
                                    <Image.Source>
                                        <DrawingImage>
                                            <DrawingImage.Drawing>
                                                <GeometryDrawing Brush="Gold" Pen="{x:Null}">
                                                    <GeometryDrawing.Geometry>
                                                        <RectangleGeometry Rect="0,0,16,16"/>
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                            </DrawingImage.Drawing>
                                        </DrawingImage>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>

            <!-- グリッドスプリッター -->
            <GridSplitter Grid.Column="1" 
                         Width="5" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"
                         Background="LightGray"/>

            <!-- 右側: ファイル一覧 -->
            <GroupBox Grid.Column="2" Header="ファイル一覧">
                <ListView ItemsSource="{Binding FileList}" 
                         SelectedItem="{Binding SelectedFile}"
                         MouseDoubleClick="FileList_MouseDoubleClick"
                         VirtualizingStackPanel.IsVirtualizing="True"
                         VirtualizingStackPanel.VirtualizationMode="Recycling">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="名前" Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <!-- ファイル/フォルダアイコン -->
                                            <Image Width="16" Height="16" Margin="0,0,5,0">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Source">
                                                            <Setter.Value>
                                                                <DrawingImage>
                                                                    <DrawingImage.Drawing>
                                                                        <GeometryDrawing Brush="LightBlue" Pen="{x:Null}">
                                                                            <GeometryDrawing.Geometry>
                                                                                <RectangleGeometry Rect="0,0,16,16"/>
                                                                            </GeometryDrawing.Geometry>
                                                                        </GeometryDrawing>
                                                                    </DrawingImage.Drawing>
                                                                </DrawingImage>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDirectory}" Value="True">
                                                                <Setter Property="Source">
                                                                    <Setter.Value>
                                                                        <DrawingImage>
                                                                            <DrawingImage.Drawing>
                                                                                <GeometryDrawing Brush="Gold" Pen="{x:Null}">
                                                                                    <GeometryDrawing.Geometry>
                                                                                        <RectangleGeometry Rect="0,0,16,16"/>
                                                                                    </GeometryDrawing.Geometry>
                                                                                </GeometryDrawing>
                                                                            </DrawingImage.Drawing>
                                                                        </DrawingImage>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="サイズ" Width="100" DisplayMemberBinding="{Binding DisplaySize}"/>
                            <GridViewColumn Header="更新日時" Width="150" DisplayMemberBinding="{Binding ModifiedDate, StringFormat=yyyy/MM/dd HH:mm:ss}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>