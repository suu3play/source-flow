<UserControl x:Class="SourceFlow.UI.Views.ScheduleManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:SourceFlow.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- コンバーター -->
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- スタイル定義 -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="スケジュール管理" Style="{StaticResource HeaderTextStyle}"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="新規作成" 
                        Command="{Binding OpenCreateJobDialogCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="LightBlue"/>
                <Button Content="更新" 
                        Command="{Binding LoadJobsCommand}"
                        Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- 統計情報 -->
        <Border Grid.Row="1" Background="LightGray" Padding="10" Margin="10,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="総ジョブ数" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Statistics.TotalJobs}" FontSize="18"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="アクティブ" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Statistics.ActiveJobs}" FontSize="18" Foreground="Green"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="総実行回数" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Statistics.TotalExecutions}" FontSize="18"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3">
                    <TextBlock Text="成功率" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Statistics.SuccessRate, StringFormat={}{0:F1}%}" FontSize="18" Foreground="Blue"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ジョブ一覧とコントロール -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ジョブ一覧 -->
            <DataGrid Grid.Column="0" 
                      ItemsSource="{Binding ScheduledJobs}"
                      SelectedItem="{Binding SelectedJob}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      RowHeaderWidth="0">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="状態" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Style="{StaticResource StatusIndicatorStyle}">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Status}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTextColumn Header="ジョブ名" Binding="{Binding JobName}" Width="150"/>
                    <DataGridTextColumn Header="説明" Binding="{Binding Description}" Width="200"/>
                    <DataGridTextColumn Header="Cron式" Binding="{Binding CronExpression}" Width="120"/>
                    <DataGridTextColumn Header="最終実行" Binding="{Binding LastExecutionTime, StringFormat=yyyy/MM/dd HH:mm}" Width="120"/>
                    <DataGridTextColumn Header="次回実行" Binding="{Binding NextExecutionTime, StringFormat=yyyy/MM/dd HH:mm}" Width="120"/>
                    
                    <DataGridTemplateColumn Header="有効" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsEnabled}" IsEnabled="False" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- ジョブ詳細・コントロール -->
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ジョブコントロール -->
                <GroupBox Grid.Row="0" Header="ジョブ操作" Margin="0,0,0,10">
                    <UniformGrid Columns="2" Margin="5">
                        <Button Content="開始" 
                                Command="{Binding StartJobCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="LightGreen"/>
                        <Button Content="停止" 
                                Command="{Binding StopJobCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="LightCoral"/>
                        <Button Content="一時停止" 
                                Command="{Binding PauseJobCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="LightYellow"/>
                        <Button Content="再開" 
                                Command="{Binding ResumeJobCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="LightBlue"/>
                        <Button Content="即座実行" 
                                Command="{Binding TriggerJobCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="Orange"/>
                        <Button Content="削除" 
                                Command="{Binding DeleteJobCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="Pink"/>
                    </UniformGrid>
                </GroupBox>

                <!-- ジョブ詳細 -->
                <GroupBox Grid.Row="2" Header="ジョブ詳細">
                    <ScrollViewer>
                        <StackPanel Margin="5" DataContext="{Binding SelectedJob}">
                            <TextBlock Text="詳細情報が選択されたジョブについて表示されます" 
                                       Style="{StaticResource {x:Type TextBlock}}"
                                       Visibility="{Binding Converter={StaticResource NullToVisibilityConverter}}"/>
                            
                            <Grid Visibility="{Binding Converter={StaticResource NotNullToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" Margin="0,0,10,5" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Id}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="ジョブ名:" Margin="0,0,10,5" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding JobName}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="説明:" Margin="0,0,10,5" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Description}" Margin="0,0,0,5" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Cron式:" Margin="0,0,10,5" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CronExpression}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="最大リトライ:" Margin="0,0,10,5" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MaxRetryCount}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="作成日時:" Margin="0,0,10,5" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CreatedAt, StringFormat=yyyy/MM/dd HH:mm:ss}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="最終エラー:" Margin="0,0,10,5" FontWeight="SemiBold" 
                                           Visibility="{Binding LastErrorMessage, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding LastErrorMessage}" Margin="0,0,0,5" TextWrapping="Wrap" Foreground="Red"
                                           Visibility="{Binding LastErrorMessage, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <ProgressBar Width="100" Height="16" IsIndeterminate="{Binding IsLoading}" 
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding StatusMessage}" Margin="10,0,0,0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- 新規ジョブ作成ダイアログ -->
        <Border Grid.RowSpan="4" Background="#80000000" 
                Visibility="{Binding IsCreateJobDialogOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" 
                    MaxWidth="600" MaxHeight="500" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Padding="20" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ダイアログヘッダー -->
                    <TextBlock Grid.Row="0" Text="新しいスケジュールジョブを作成" 
                               Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center"/>

                    <!-- フォーム -->
                    <ScrollViewer Grid.Row="1" Margin="0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ジョブ名:" Margin="0,0,10,10" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewJobName}" Margin="0,0,10,10" Padding="5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="説明:" Margin="0,0,10,10" VerticalAlignment="Top" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewJobDescription}" Margin="0,0,10,10" Padding="5" 
                                     Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Cron式:" Margin="0,0,10,10" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewCronExpression}" Margin="0,0,10,10" Padding="5"/>
                            <Button Grid.Row="2" Grid.Column="2" Content="検証" Command="{Binding ValidateCronCommand}" Padding="10,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="ソースパス:" Margin="0,0,10,10" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding NewSourcePath}" Margin="0,0,10,10" Padding="5"/>
                            <Button Grid.Row="3" Grid.Column="2" Content="参照" Command="{Binding BrowseSourcePathCommand}" Padding="10,5"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="ターゲットパス:" Margin="0,0,10,10" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding NewTargetPath}" Margin="0,0,10,10" Padding="5"/>
                            <Button Grid.Row="4" Grid.Column="2" Content="参照" Command="{Binding BrowseTargetPathCommand}" Padding="10,5"/>

                            <CheckBox Grid.Row="5" Grid.Column="1" IsChecked="{Binding NewCreateBackup}" Content="バックアップを作成" Margin="0,0,10,10"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="最大リトライ回数:" Margin="0,0,10,10" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding NewMaxRetryCount}" Margin="0,0,10,10" Padding="5"/>
                        </Grid>
                    </ScrollViewer>

                    <!-- ダイアログボタン -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="作成" 
                                Command="{Binding CreateJobCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="LightBlue" IsDefault="True"/>
                        <Button Content="キャンセル" 
                                Command="{Binding CloseCreateJobDialogCommand}"
                                Style="{StaticResource ActionButtonStyle}" IsCancel="True"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>